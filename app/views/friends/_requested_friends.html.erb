<% unless @user.requested_friends.empty? %>
  <% @user.requested_friends.each do |user| %>
    <%= link_to user.username, user_path(user.id) %> 
      <% if logged_in? && @user = current_user %>
        <%= link_to '[Cancel]', user_friend_path(:user_id => current_user, :id => user), :method => :delete, :confirm => 'Are you sure?' %>
      <% end %>
  <% end %>
      <% else %>
  <p>You haven't made any request!</p>
<% end %>