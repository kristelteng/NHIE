<% unless @user.pending_friends.empty? %>
  <% @user.pending_friends.each do |user| %>
  <!-- below line, may not be needed -->
    <%= link_to user.username, user_path(user.id) %>
      <% if logged_in? && @user = current_user %>
        <%= link_to '[Accept]', user_friend_path(:user_id => current_user, :id => user), :method => :put, :confirm => 'Accept friend request! Are you sure?' %> |
        <%= link_to '[Reject]', user_friend_path(:user_id => current_user, :id => user), :method => :delete, :confirm => 'Reject friend request! Are you sure?' %>
      <% end %>
  <% end %>
      <% else %>
  <p>You don't have any requests!</p>
<% end %>