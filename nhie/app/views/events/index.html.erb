<h1>Events</h1>
<%= link_to "Create a new Event!", new_event_path %>

<!-- Add search results -->
<% if @events != nil %>
  <h3>Search events</h3>
  <% @events.each do |event| %>
    <div>
      <h3><%= link_to event.event_name, event_path(event) %></h3>
      <p><%= event.description %></p><br />
    </div>
  <% end %>
<% end %>

<h3>My events</h3>
<% current_user.created_events.each do |event| %>
	<div>
		<h3><%= link_to event.event_name, event_path(event) %></h3>
		<p><%= event.description %></p><br />
	</div>
<% end %>

<!-- Add title differentiate from top  -->
<h3>Friend events</h3>
<% @friends_events.each do |event| %>
	<div>
		<h3><%= link_to event.event_name, event_path(event) %></h3>
		<p><%= event.description %></p><br />
	</div>
<% end %>