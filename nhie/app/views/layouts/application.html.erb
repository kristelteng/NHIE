<!DOCTYPE html>
<html>
		<head>
		  <title>Nhie</title>
		  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		  <%= csrf_meta_tags %>
		</head>
	<body class="<%= controller_name %> <%= action_name %>">
		<!-- checking for error messages -->
		<% flash.each do |name, msg| %>
		  <% if msg.is_a?(String) %>
		    <%= content_tag :div, msg, :class => "flash_#{name}" %>
		  <% end %>
		<% end %>

	<!-- SEARCH -->
      <div class="form-group">
        <%= form_tag events_path, method: :get, authentication: false, id: 'search-form' do %>
        	<%= text_field_tag :search, params[:params], :input_type =>'text', :class => 'form-control', :placeholder =>'search' %>
        	<%= submit_tag "Search", :type => 'submit', :class => 'btn btn-default' %>
        <% end %>
      </div> 
      
	<!-- SEARCH -->

		<%= yield %>
		
		<% if logged_in? %>
			<p><%= link_to("Log out", logout_path) unless current_page?(login_path) %></p>
			<p><%= link_to("Profile", user_url(current_user)) %></p>
			<p><%= link_to("Users", users_url) %></p>
			<p><%= link_to("Events", events_url) %></p>

		<% end %>

	</body>
</html>
