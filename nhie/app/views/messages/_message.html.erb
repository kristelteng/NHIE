<% if message.id.present? %>
<img src><%= image_tag(message.user.image, size: "50x50") %>
<div class="message-box">

  <div class="message-title">
    <% if message.user != nil %>
    <%= message.created_at.strftime("%d %b. %Y %H:%M") %>
    <em><%= message.user.username %> says:</em>
    
  </div>
  <p><%= message.body %></p>
  <% end %>
  
</div>
<% end %>